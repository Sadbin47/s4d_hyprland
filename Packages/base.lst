#!/bin/bash
#=============================================================================
# BASE PACKAGES â€” Core system utilities for Hyprland
#=============================================================================

source "$(dirname "${BASH_SOURCE[0]}")/../Scripts/functions.sh"

log "${INFO} Installing base system packages..."

BASE_PACKAGES=(
    # Audio (Pipewire)
    "pipewire"
    "pipewire-alsa"
    "pipewire-audio"
    "pipewire-pulse"
    "wireplumber"
    "pavucontrol"
    "pamixer"

    # Network
    "networkmanager"
    "network-manager-applet"

    # Utilities
    "brightnessctl"
    "playerctl"
    "udiskie"
    "polkit-gnome"
    "xdg-desktop-portal-hyprland"
    "xdg-desktop-portal-gtk"
    "xdg-user-dirs"

    # CLI essentials
    "jq"
    "unzip"
    "libnotify"
    "wl-clipboard"
    "pacman-contrib"
    "bat"
    "eza"
    "btop"
    "fastfetch"
    "fzf"
    "swappy"
)

for pkg in "${BASE_PACKAGES[@]}"; do
    install_pkg "$pkg"
done

log "${OK} Base packages done"
