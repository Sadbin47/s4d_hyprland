#!/bin/bash
#=============================================================================
# FONTS PACKAGES
#=============================================================================

source "$(dirname "${BASH_SOURCE[0]}")/../Scripts/functions.sh"

log "${INFO} Installing font packages..."

FONT_PACKAGES=(
    # Nerd Fonts
    "ttf-jetbrains-mono-nerd"
    "ttf-firacode-nerd"
    "ttf-cascadia-code-nerd"
    "ttf-hack-nerd"

    # System Fonts
    "noto-fonts"
    "noto-fonts-cjk"
    "noto-fonts-emoji"
    "ttf-liberation"
    "ttf-dejavu"

    # Icon Fonts
    "ttf-font-awesome"
    "otf-font-awesome"

    # UI Fonts
    "ttf-roboto"
    "inter-font"
)

for pkg in "${FONT_PACKAGES[@]}"; do
    install_pkg "$pkg"
done

# Refresh font cache
fc-cache -fv &>/dev/null || true

log "${OK} Font installation done"
